{
  "name": "action-slack-message",
  "version": "0.0.1",
  "private": true,
  "description": "Post messages to Slack from GitHub Actions",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "prebuild": "npm run clean",
    "build": "npm run build:ts && npm run bundle",
    "build:ts": "tsc -p tsconfig.build.json",
    "bundle": "ncc build --source-map --license licenses.txt",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha \"test/**/*.test.ts\"",
    "prettify": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/action-slack-message.git"
  },
  "keywords": [
    "actions",
    "node",
    "slack",
    "message"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "@octokit/core": "^4.0.5",
    "@slack/web-api": "^6.7.2"
  },
  "devDependencies": {
    "@ts-tools/node": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "~5.36.1",
    "@typescript-eslint/parser": "~5.36.1",
    "@vercel/ncc": "^0.34.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.8.2"
  }
}
